@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Mvc;

@Html.QueryBuilderScriptReferences()




<div class="form-group">
    <div class="row">
        <div class="col-xs-6">
            <div class="checkbox">
                <label for="greybg">
                    <input type="checkbox" id="greybg" ng-model="properties.ContentLeft.PropertyValue" ng-true-value="'True'" ng-false-value="'False'" ng-checked="properties.ContentLeft.PropertyValue === 'True'" />
                    Content left?
                </label>
            </div>
        </div>
    </div>
</div>

<hr class="side-to-side">


<div class="form-group">
    <label for="image-field" class="m-top-sm">Testimonials</label>

    <sf-list-selector sf-dynamic-items-selector
                      sf-item-type="'Telerik.Sitefinity.DynamicTypes.Model.Testimonials.Testimonial'"
                      sf-master="false"
                      sf-selected-item="selectedItem"
                      sf-selected-item-id="selectedItemId"
                      sf-provider="provider"></sf-list-selector>

</div>


<div class="form-group">
    <label for="templateName">Template</label>
    <div class="row">
        <div class="col-xs-6">
            <select id="templateName" ng-model="properties.Template.PropertyValue" class="form-control">
                @foreach (var viewName in Html.GetViewNames("TestimonialList", @"TestimonialList\.(?<viewName>[\w\s]*)$"))
                {
                    <option value="@viewName">@viewName.SplitCamelCase()</option>
                }
            </select>
        </div>
    </div>
</div>

