@model SitefinityWebApp.Mvc.Models.CardList.CardListViewModel

@{
    Layout = "~/MVC/Views/Shared/_WidgetBase.cshtml";
    ViewBag.ExtraWidgetClasses = "card-list card-list--action";
}

<div class="row @(Model.CenterText == true ? "justify-content-center text-center" : "")">
    <div class="col-8">
        <h2 class="mb-@(!string.IsNullOrEmpty(Model.Content) ? "3" : "4")">@Model.Title</h2>

        @if(!string.IsNullOrEmpty(Model.Content))
        {
            <p class="text-large mb-4">@Model.Content</p>
        }
    </div>
</div>

<div class="row justify-content-center card-list__wrapper">
    @foreach (var carditem in Model.CardItems)
    {
        @Html.Partial("~/MVC/Views/Shared/Cards/_Action.cshtml", carditem)
    }
</div>

