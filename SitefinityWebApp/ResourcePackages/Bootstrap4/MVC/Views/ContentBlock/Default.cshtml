@model Telerik.Sitefinity.Frontend.ContentBlock.Mvc.Models.IContentBlockModel

@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<section class="pt-7">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <div class="@Model.WrapperCssClass content-area" @Html.InlineEditingAttributes(Model.ProviderName, Model.ContentType, Model.SharedContentID)>
                    <div @Html.InlineEditingFieldAttributes("Content", "LongText")>@Html.HtmlSanitize(Model.Content)</div>    
                </div>
            </div>
        </div>
    </div>
</section>
